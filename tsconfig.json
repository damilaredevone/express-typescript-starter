{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "esModuleInterop": true,
        "noUnusedParameters": false,
        "noUnusedLocals": true,
        "assumeChangesOnlyAffectDirectDependencies": true,
        "noFallthroughCasesInSwitch": true,
        "rootDir": ".",
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@@": ["./src"]
         },
    },
    "include": [
        "src/**/*.ts",
        "tests/**/*",
    ]
}
