{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "esModuleInterop": true,
        "noUnusedParameters": false,
        "noUnusedLocals": true,
        "assumeChangesOnlyAffectDirectDependencies": true,
        "noFallthroughCasesInSwitch": true,
        "rootDir": ".",
        "outDir": "dist",
        "baseUrl": "src",
        "paths": {
            "@/*": ["src/*"],
         },
    },
    "include": [
        "src/**/*.ts",
        "tests/**/*",
    ]
}
