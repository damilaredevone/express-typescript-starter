{
  "name": "node-api",
  "version": "1.0.0",
  "description": "Writing expressjs for fun",
  "main": "src/index.ts",
  "scripts": {
    "test": "jest --forceExit --coverage --verbose --detectOpenHandles",
    "test:unit": "ENV_FILE=./.env.test jest --forceExit --verbose --coverage --detectOpenHandles",
    "start": "NODE_ENV=production node dist/src/index.js",
    "dev": "nodemon",
    "format": "prettier --write --cache \"./**/*.{vue,js,ts,md}\"",
    "format:check": "prettier --check \"./**/*.{vue,js,ts,md}\"",
    "lint": "eslint --cache .",
    "lint:fix": "eslint . --cache --fix",
    "build": "tsc -p .",
    "typecheck": "tsc --noEmit",
    "preinstall": "simple-git-hooks"
  },
  "author": "Damilare Anjorin",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.3.4",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.0",
    "nodemon": "^3.0.0",
    "validatorjs": "^3.22.1",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@damilaredev/eslint-config": "^0.0.19",
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "1.19.2",
    "@types/compression": "1.7.2",
    "@types/cors": "2.8.13",
    "@types/errorhandler": "1.5.0",
    "@types/express": "4.17.17",
    "@types/faker": "6.6.8",
    "@types/jest": "29.4.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "18.16.19",
    "@types/supertest": "2.0.12",
    "@types/validatorjs": "3.15.0",
    "errorhandler": "1.5.1",
    "eslint": "^8.34.0",
    "faker": "6.6.6",
    "jest": "29.6.4",
    "lint-staged": "^13.1.2",
    "mongodb-memory-server": "^8.0.0",
    "picocolors": "^1.0.0",
    "pm2": "^5.2.2",
    "pnpm": "^8.0.0",
    "prettier": "^3.0.0",
    "simple-git-hooks": "^2.8.1",
    "supertest": "6.3.3",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.1.6"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  }
}
